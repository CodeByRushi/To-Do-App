<html>
    <head> 
        
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="/CSS/style.css">
    </head>
    <body>

        
        <div class="form_class">
            <h2>To-Do Application </h2>
            <form action="/create_todo" method="POST">
                <div class="desc_Class">
                    <input type="textarea"  name="desc" placeholder="Description about you ToDo" required> 
                </div>
                <div class="select_and_input">
                    <select name="category" required>
                        <option value="" disabled selected>Choose a category</option>
                        <option>Personal</option>
                        <option>Work</option>
                        <option>Cleaning</option>
                        <option>Others</option>
                    </select>
                    <input class="datesValues" type="date" name="dateValue" placeholder="Due data dd/mm/yyyy" required>
                </div>
                    <button class="buttonDesign colorGrey" id="submitButton" type="submit" name="action" value="add"
                    formaction="add">
                        <i class="fa fa-plus-square" > </i> Add Task
                    </button>
                
                    <!-- <a href="/deleteData"> -->
                        <!-- <button class="buttonDesign colorRed" id="deleteButton" type="submit" name="action" value="Delete"
                        formaction="delete">
                            <i class="fa fa-trash-o"></i> Delete Task
                        </button> -->
                    <!-- </a> -->
                    <br><br>
            
                </form>
            </div>
        
            <!-- Display list -->
        <div class="displayContainer">
                <% for(let i of todoList) {  %>
                    <div class="singleTask">
                        <input type="checkbox" name="deletecheck" class="delechack" id =<%= i._id %> >
                        <div class="name_and_dueDate">
                            <span id=<%= i._id %>  id = <%= i._id %> class="dispdsc"><%= i.desc %></span>
                            <p id=<%= i._id %> class="dueDate"  ><%= i.dueDate %></p>
                        </div>
                        <div class="catesec <%= i.category %> ">
                            <%= i.category %>
                        </div>
                            <div class="editClass">
                                <a href="/editdata/?id=<%=i._id %>">Edit</a>
                                <a href="/delete/?id=<%=i._id%>"">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                            
                    </div>
                    <% } %>
     
        </div>
    
    
                 
        
        <script src="https://kit.fontawesome.com/fb9831f3fd.js" crossorigin="anonymous"></script>
        <script src="/JS/script.js"></script>
    </body>
</html>